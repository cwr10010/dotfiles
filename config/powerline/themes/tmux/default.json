				"args": {
                    "location_query": "Berlin,Germany",
                    "icons": {
                        "day":         "〇",
                        "blustery":   "⚑",
                        "rainy":         "☂",
                        "cloudy":       "☁",
                        "snowy":         "❅",
                        "stormy":       "☈",
                        "foggy":         "≡",
                        "sunny":         "☼",
                        "night":         "☾",
                        "windy":         "☴",
                        "not_available": "?",
                        "unknown":     "?"
                    }
				}
			},
			{
				"function": "powerline.segments.common.wthr.weather",
				"args": {
					"location_query": "Milan,Italy",
                    "icons": {
                        "day":         "〇",
                        "blustery":   "⚑",
                        "rainy":         "☂",
                        "cloudy":       "☁",
                        "snowy":         "❅",
                        "stormy":       "☈",
                        "foggy":         "≡",
                        "sunny":         "☼",
                        "night":         "☾",
                        "windy":         "☴",
